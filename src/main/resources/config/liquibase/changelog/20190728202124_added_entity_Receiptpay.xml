            </column>

            <column name="userid" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="sourcer" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="benefit" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="payway" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="amount" type="decimal(21,3)">
                <constraints nullable="true" />
            </column>

            <column name="bonus" type="decimal(21,3)">
                <constraints nullable="true" />
            </column>

            <column name="happendate" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="freezedate" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="dealstate" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="creator" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="createdate" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="modifier" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="modifierdate" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="modifiernum" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="logicdelete" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="other" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

    <changeSet id="20190728202124-1-relations" author="jhipster">

